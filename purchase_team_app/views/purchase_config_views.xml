<?xml version="1.0"?>
<odoo>
    <data> 
        <record id="view_res_config_purchase_id" model="ir.ui.view">
            <field name="name">res.config.purchase.new</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='col-12 col-lg-6 o_setting_box']" position="after">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="purchase_team"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="purchase_team" string="Purcahse Team"/>
                                    <div class="text-muted">
                                        Manage the purchase team.
                                    </div>
                                </div>
                            </div>
                    </xpath>
            </field>
        </record>

        <record id="view_users_form_teams" model="ir.ui.view">
		<field name="name">res.users.form.teams</field>
		<field name="model">res.users</field>
		<field name="inherit_id" ref="base.view_users_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
                <page string="User Teams">
                    <group>
                        <field name="sale_team_id"/>
                        <field name="purchase_team_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    </data>
</odoo>
