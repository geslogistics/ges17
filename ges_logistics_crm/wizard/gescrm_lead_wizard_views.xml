<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Views -->
    


    <record id="gescrm_lead_wizard_form_view" model="ir.ui.view">
        <field name="name">Lead Wizard Form</field>
        <field name="model">gescrm.lead.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="company_type"/>
                        <field name="country_id"/>
                        <field name="legal_name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="website"/>
                        <field name="vat"/>
                        <field name="company_registry"/>
                        <form>
                        <button name="find_accounts" string="Find"
                            type="object" 
                            class="oe_highlight"
                            data-hotkey="q"/>
                        <field name="possible_partner_ids"/>
                        </form>
                        
                    </group>
                </sheet>
                <footer>
                    <button name="find_accounts" string="Find"
                            type="object" 
                            class="oe_highlight"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    
    
</odoo>
