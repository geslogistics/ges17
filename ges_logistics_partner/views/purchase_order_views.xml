<?xml version="1.0" encoding="utf-8"?>
<odoo>

    

    <record id="view_purchase_order_form_inherit_partner_application" model="ir.ui.view">
        <field name="name">
            purchase.order.inherit.partner.application
        </field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="domain_currency_id" invisible="1"/>
                <field name="domain_payment_term_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="domain">domain_currency_id</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="domain">domain_payment_term_id</attribute>
            </xpath>
        </field>
    </record>
    
    <record id="purchase_order_form_inherit_purchase_teams" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_info']/field[@name='user_id']"  position="after">
                <field name="purchase_team_id" groups='ges_logistics_partner.group_purchase_team'/>
            </xpath>
        </field>
    </record>
    
</odoo>
