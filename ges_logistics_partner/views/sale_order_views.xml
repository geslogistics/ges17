<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form_inherit_partner_application" model="ir.ui.view">
        <field name="name">
            sale.order.inherit.partner.application
        </field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="domain_pricelist_id" invisible="1"/>
                <field name="domain_payment_term_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="attributes">
                <attribute name="domain">domain_pricelist_id</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="domain">domain_payment_term_id</attribute>
            </xpath>
        </field>
    </record>

    
    
</odoo>
