<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ges_arabic_english_invoice">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <t t-set="force_hide_address" t-value="True"/>
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' style="display: inline-block"/>
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>

                <t t-set="o_sec" t-value="o.with_context(lang='ar_001')"/>
                <t t-set="o" t-value="o.with_context(lang='en_US')"/>

                <div class="page">

                    <div class="w-100 mb-4 text-center" t-if="o.l10n_sa_qr_code_str" name="l10n_sa_qr_img">
                        <img style="display:block; margin:auto"
                         t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', quote_plus(o.l10n_sa_qr_code_str), 100, 100)"/>
                    </div>
                    
                    <h3>
                        <div class="row">
                            <div class="col-3" style="text-align:left">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                    Tax Invoice
                                </span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">
                                    Draft Invoice
                                </span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                    Cancelled Invoice
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">
                                    Credit Note
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">
                                    Draft Credit Note
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">
                                    Cancelled Credit Note
                                </span>
                                <span t-elif="o.move_type == 'in_refund'">
                                    Vendor Credit Note
                                </span>
                                <span t-elif="o.move_type == 'in_invoice'">
                                    Vendor Bill
                                </span>
                            </div>
                            <div class="col-6 text-center">
                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </div>
                            <div class="col-3 drtl font_arabic">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                    فاتورة ضريبية
                                </span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">
                                    مسودة فاتورة
                                </span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                    فاتورة ملغاة
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">
                                    إشعار خصم
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">
                                    إشعار خصم المسودة
                                </span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">
                                    إشعار خصم ملغاة
                                </span>
                                <span t-elif="o.move_type == 'in_refund'">
                                    إشعار خصم المورد
                                </span>
                                <span t-elif="o.move_type == 'in_invoice'">
                                    فاتورة المورد
                                </span>
                            </div>
                        </div>
                    </h3>
                    
                    <table width="100%" class="font_xsmall">
                        <tr>
                            <td width="49%" class="report_half_box font_xsmall larger_line_height">
                                <div id="informations">
                                    <div class="row" t-if="o.invoice_date" name="invoice_date">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Invoice Date:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.invoice_date"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">تاريخ الفاتورة:</strong>
                                        </div>
                                    </div>
                                    <div class="row"
                                        t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                                        name="due_date">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Due Date:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.invoice_date_due"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">تاريخ الاستحقاق:</strong>
                                        </div>
                                    </div>
                                    <div class="row d-none"
                                        t-if="o.delivery_date"
                                        name="delivery_date">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Delivery Date:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.delivery_date"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">تاريخ التوصيل:</strong>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.invoice_origin" name="origin">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Source:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.invoice_origin"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">المصدر:</strong>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.partner_id.ref" name="customer_code">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Customer Code:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.partner_id.ref"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">كود العميل:</strong>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.ref" name="reference">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Reference:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.ref"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">المرجع:</strong>
                                        </div>
                                    </div>
                                    
                                    <div class="row" t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Payment Reference:</strong>
                                        </div>
                                        <div class="col-6 text-center">
                                            <span t-field="o.payment_reference"/>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">مرجع الدفع:</strong>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.invoice_incoterm_id" name="incoterm">
                                        <div class="col-3">
                                            <strong style="white-space:nowrap">Incoterm:</strong>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center">
                                                <span t-out="o.invoice_incoterm_id.code"/> - <span t-out="o.invoice_incoterm_id.name"/>
                                            </div>
                                            <div class="text-center" t-if="o.incoterm_location">
                                                <span t-out="o.incoterm_location"/>
                                            </div>
                                        </div>
                                        <div class="col-3 drtl font_arabic">
                                            <strong style="white-space:nowrap">الأنكوترمز:</strong>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td width="2%">
                            </td>
                            <td width="49%" class="report_half_box">      
                                <div class="row">
                                    <div class="col-2">
                                        <strong>Issued to:</strong>
                                    </div>
                                    <div class="col-8 text-center">
                                        <t t-esc="address or None"/>
                                    </div>
                                    <div class="col-2 drtl font_arabic">
                                        <strong>اصدرت الى:</strong>
                                    </div>
                                </div>
                            </td>
                            
                            
                        </tr>
                    </table>

                    

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    <table class="font_xsmall table table-sm o_main_table table-borderless mt-4" name="invoice_line_table">
                        <thead>
                            <tr class="bg-darkgray">
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="report_th_start text-start">
                                    <span class="font_arabic">الوصف</span>
                                    <br/>
                                    <span>Description</span>
                                </th>
                                <th name="th_source" class="d-none report_th_mid text-start" t-if="0">
                                    <span class="font_arabic">المستند المصدر</span>
                                    <br/>
                                    <span>Source Document</span>
                                </th>
                                <th name="th_quantity" class="report_th_mid text-end">
                                    <span class="font_arabic">الكمية</span>
                                    <br/>
                                    <span>Quantity</span>
                                </th>
                                <th name="th_priceunit"
                                    class="report_th_mid text-end">
                                    <span class="font_arabic">سعر الوحدة</span>
                                    <br/>
                                    <span>Unit price</span>
                                </th>
                                <th name="th_price_unit" t-if="display_discount"
                                    class="report_th_mid text-end">
                                    <span class="font_arabic drtl">الخصم</span>
                                    <br/>
                                    <span>Disc.%</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th name="th_taxes"
                                    class="report_th_mid text-end">
                                    <span class="font_arabic">الضرائب</span>
                                    <br/>
                                    <span>Taxes</span>
                                </th>
                                <th name="th_subtotal" class="report_th_mid text-end">
                                    <span class="font_arabic">المبلغ</span>
                                    <br/>
                                    <span>Amount</span>
                                </th>
                                <th name="th_tax_amount"
                                    class="report_th_mid text-end">
                                    <span class="font_arabic">الضريبة</span>
                                    <br/>
                                    <span>Tax Amount</span>
                                </th>
                                <th name="th_total" class="report_th_end text-end">
                                    <span class="font_arabic">السعر الاجمالي</span>
                                    <br/>
                                    <span>Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines"
                            t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                <t t-set="current_total" t-value="current_subtotal + line.price_total" t-if="o.tax_calculation_rounding_method == 'round_per_line'"/>

                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" class="report_note">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" class="report_section">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type not in ('line_note', 'line_section')" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name" class="report_td_start text-start">
                                            <t t-if="line.product_id">
                                                <t t-set="arabic_name" t-value="line.with_context(lang='ar_001').product_id.display_name"/>
                                                <t t-set="english_name" t-value="line.with_context(lang='en_US').product_id.display_name"/>

                                                <span t-out="line.with_context(lang='ar_001').product_id.name"
                                                    t-options="{'widget': 'text'}" class="drtl light_font_arabic"/>

                                                <t t-if="arabic_name != english_name">
                                                    <br/>
                                                    <span t-field="line.product_id.display_name"
                                                        t-options="{'widget': 'text'}"/>
                                                </t>

                                                <t t-if="line.name != english_name and line.name != arabic_name">
                                                    <br/>
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </t>
                                        </td>
                                        <td class="report_td_mid text-end">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td class="report_td_mid text-end">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount"
                                            class="report_td_mid text-end">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td class="report_td_mid text-end">
                                            <span t-out="', '.join(map(lambda x: (x.invoice_label or x.name), line.tax_ids))"
                                                id="line_tax_ids"/>
                                        </td>
                                        <td class="report_td_mid text-end o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal"/>
                                        </td>
                                        <td class="report_td_mid text-end">
                                            <span class="text-nowrap" t-field="line.l10n_gcc_invoice_tax_amount"/>
                                        </td>
                                        <td class="report_td_end text-end o_price_total">
                                            <span class="text-nowrap" t-field="line.price_total"/>
                                        </td>
                                    </t>
                                    
                                    
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td colspan="99" class="report_section_subtotal">
                                            <span class="mr16" style="display: inline-block">
                                                <strong>Subtotal / </strong>
                                                <strong class="font_arabic">الإجمالي الفرعي</strong>
                                            </span>
                                            <span style="margin-right: 15px"/>
                                            <span t-out="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix font_xsmall pt-4 pb-3">
                        <div id="total" class="row">
                            <div class="col-6 offset-6">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal">
                                        <td>
                                            <strong>Subtotal / </strong>
                                            <strong class="font_arabic">الإجمالي الفرعي</strong>
                                        </td>
                                        <td class="text-end report_field_padding_end">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                        <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                        <!-- copy-pasted template "account.tax_groups_totals" with reversed columns order -->
                                        <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                            <tr>
                                                <t t-if="tax_totals['display_tax_base']">
                                                    <td class="">
                                                        <strong>
                                                            <span t-esc="amount_by_group['tax_group_name']"/>
                                                            <span class="text-nowrap"> on
                                                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                                            </span> / 
                                                            <span class="font_arabic">الضريبة</span>
                                                        </strong>
                                                    </td>
                                                    <td class="text-end o_price_total report_field_padding_end" >
                                                        <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td class="">
                                                        <strong>
                                                            <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/> / 
                                                            <span class="font_arabic">الضريبة</span>
                                                        </strong>
                                                    </td>
                                                    <td class="text-end o_price_total report_field_padding_end">
                                                        <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>

                                    </t>
                                    <tr class="border-black o_total bg-lightgray">
                                        <td>
                                            <strong>Total / </strong>
                                            <strong class="font_arabic">المجموع</strong>
                                        </td>
                                        <td class="text-end report_field_padding_end">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>

                                    <t t-if="o.currency_id != o.company_id.currency_id">
                                        <t t-set="exchange_rate" t-value="abs(o.amount_total_signed) / o.amount_total if o.amount_total else 0"/>
                                        <tr class="border-black o_subtotal">
                                            <td>
                                                <strong>Exchange Rate / </strong>
                                                <strong class="font_arabic">سعر الصرف</strong>
                                            </td>
                                            <td class="text-end report_field_padding_end">
                                                <span class="text-nowrap" t-out="exchange_rate" t-options='{"widget": "float", "precision": 5}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Subtotal / </strong>
                                                <strong class="font_arabic">الإجمالي الفرعي</strong>
                                            </td>
                                            <td class="text-end report_field_padding_end">
                                                <span class="text-nowrap" t-out="abs(o.amount_untaxed_signed)" t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Tax / </strong>
                                                <strong class="font_arabic">الضريبة</strong>
                                            </td>
                                            <td class="text-end report_field_padding_end">
                                                <span class="text-nowrap" t-out="abs(o.amount_tax_signed)" t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr class="bg-lightgray">
                                            <td>
                                                <strong>Total / </strong>
                                                <strong class="font_arabic">المجموع</strong>
                                            </td>
                                            <td class="text-end report_field_padding_end">
                                                <span class="text-nowrap" t-out="abs(o.amount_total_signed)" t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr class="border-black o_total">
                                                    <td>
                                                        <i class="row">
                                                            <div class="col-7 oe_form_field oe_payment_label">
                                                                <span>Paid on /</span>
                                                                <span class="font_arabic">دفعت في</span>
                                                            </div>
                                                            <div class="col-5 ps-0 oe_form_field oe_payment_label">
                                                                <t t-out="payment_vals['date']"/>
                                                            </div>
                                                        </i>
                                                    </td>
                                                    <td class="text-end report_field_padding_end">
                                                        <span t-out="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black bg-lightgray">
                                                    <td>
                                                        <strong>
                                                            <span>Amount Due / </span>
                                                            <span class="font_arabic">المبلغ المستحق</span>
                                                        </strong>
                                                    </td>
                                                    <td class="text-end report_field_padding_end">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="page-break-before: always;" t-if="o.invoice_payment_term_id or o.narration or o.fiscal_position_id">
                    <table t-if="o.invoice_payment_term_id" class="font_xsmall table table-sm o_main_table table-borderless mt-4" id="payment_terms_section">
                        <thead>
                            <tr class="bg-lightgray">
                                <th class="report_th_start text-start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span>Payment Terms</span>
                                </th>
                                <th class="report_th_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <th class="report_th_end text-end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="font_arabic drtl">شروط الدفع</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="report_td_start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span t-out="o.invoice_payment_term_id.note"/>
                                </td>
                                <td class="report_td_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <td class="report_td_end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="light_font_arabic drtl" t-out="o_sec.invoice_payment_term_id.note"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table t-if="o.narration" class="font_xsmall table table-sm o_main_table table-borderless mt-4" id="payment_terms_section">
                        <thead>
                            <tr class="bg-lightgray">
                                <th class="report_th_start text-start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span>Terms &amp; Conditions</span>
                                </th>
                                <th class="report_th_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <th class="report_th_end text-end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="font_arabic drtl">الأحكام والشروط</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="report_td_start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span t-out="o.narration"/>
                                </td>
                                <td class="report_td_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <td class="report_td_end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="light_font_arabic drtl" t-out="o_sec.narration"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table t-if="o.fiscal_position_id.note" class="font_xsmall table table-sm o_main_table table-borderless mt-4" id="payment_terms_section">
                        <thead>
                            <tr class="bg-lightgray">
                                <th class="report_th_start text-start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span>Fiscal Position Notes</span>
                                </th>
                                <th class="report_th_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <th class="report_th_end text-end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="font_arabic drtl">ملاحظات الوضع المالي</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="report_td_start" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span t-out="o.fiscal_position_id.note"/>
                                </td>
                                <td class="report_td_mid text-center" style="width:2% !important; min-width:2%; max-width:2%"/>
                                <td class="report_td_end" style="width:48% !important; min-width:48%; max-width:48%">
                                    <span class="light_font_arabic drtl" t-out="o_sec.fiscal_position_id.note"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="ges_logistics_report_layout.ges_arabic_english_invoice" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_with_payments">
            <t t-call="ges_logistics_report_layout.report_invoice">
                <t t-set="print_with_payments" t-value="True"/>
            </t>
        </template>

        <!--We need to create the following empty report template for the action report
            "action_account_original_vendor_bill" to work. The action is merging the
            original vendor bill(s) that were used to create the vendor bill(s) into one PDF. -->
        <template id="report_original_vendor_bill">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="article"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')"></div>
                </t>
            </t>
        </template>
    </data>
